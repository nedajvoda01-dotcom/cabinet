# Cabinet Platform Configuration

# Platform
PLATFORM_PORT=8080
PLATFORM_HOST=0.0.0.0

# Registry
REGISTRY_PATH=/app/registry

# Storage
STORAGE_PATH=/var/lib/cabinet/storage

# Limits
DEFAULT_RATE_LIMIT=100
DEFAULT_TIMEOUT=30
MAX_REQUEST_SIZE=10485760

# Phase 6: ResultGate limits
MAX_RESPONSE_SIZE=10485760
MAX_ARRAY_SIZE=1000

# Logging
LOG_LEVEL=info
LOG_PATH=/var/log/cabinet

# Security - Phase 5
ENABLE_AUTH=true
JWT_SECRET=change-this-in-production

# Phase 5.1: API Keys for authentication
# Format: api_key_value|ui|role|user_id
# Example: API_KEY_ADMIN=secret123|admin|admin|admin_user
API_KEY_ADMIN=admin_secret_key_12345|admin|admin|admin_user
API_KEY_PUBLIC=public_secret_key_67890|public|guest|public_user

# Adapters
ADAPTER_CAR_STORAGE_URL=http://adapter-car-storage:8081
ADAPTER_PRICING_URL=http://adapter-pricing:8082
ADAPTER_AUTOMATION_URL=http://adapter-automation:8083

# UI
UI_ADMIN_PORT=3000
UI_PUBLIC_PORT=3001
