{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RobotRunStatusResponse",
  "type": "object",
  "required": ["correlation_id", "run_id", "status"],
  "properties": {
    "correlation_id": { "type": "string" },
    "run_id": { "type": ["string", "integer"] },
    "status": {
      "type": "string",
      "enum": ["queued", "running", "done", "failed", "captcha", "blocked"]
    },
    "progress": { "type": "number", "minimum": 0, "maximum": 1 },
    "avito_item_id": { "type": ["string", "null"] },
    "error": { "$ref": "./errors.json#/definitions/RobotError" }
  },
  "additionalProperties": false
}
