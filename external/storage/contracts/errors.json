{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StorageErrors",
  "definitions": {
    "StorageError": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "fatal": { "type": "boolean", "default": false },
        "meta": { "type": "object", "additionalProperties": true }
      },
      "additionalProperties": false
    }
  }
}
