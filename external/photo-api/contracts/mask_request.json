{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PhotoMaskRequest",
  "type": "object",
  "required": ["correlation_id", "photos"],
  "properties": {
    "correlation_id": { "type": "string", "minLength": 8 },
    "photos": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["raw_url", "order_no"],
        "properties": {
          "raw_url": { "type": "string", "format": "uri" },
          "order_no": { "type": "integer", "minimum": 0 },
          "photo_id": { "type": ["integer", "string"] },
          "meta": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "watermark": { "type": "boolean", "default": false },
        "blur_faces": { "type": "boolean", "default": true },
        "quality": { "type": "integer", "minimum": 30, "maximum": 100, "default": 85 }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
