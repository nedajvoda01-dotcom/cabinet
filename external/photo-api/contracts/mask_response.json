{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PhotoMaskResponse",
  "type": "object",
  "required": ["correlation_id", "status", "results"],
  "properties": {
    "correlation_id": { "type": "string" },
    "status": { "type": "string", "enum": ["ok", "partial", "error"] },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["order_no", "status"],
        "properties": {
          "order_no": { "type": "integer", "minimum": 0 },
          "photo_id": { "type": ["integer", "string"] },
          "status": { "type": "string", "enum": ["masked", "failed"] },
          "masked_url": { "type": "string", "format": "uri" },
          "masked_key": { "type": "string" },
          "error": { "$ref": "./errors.json#/definitions/PhotoApiError" },
          "meta": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    },
    "error": { "$ref": "./errors.json#/definitions/PhotoApiError" }
  },
  "additionalProperties": false
}
